// Place your key bindings in this file to override the defaults
[
 
 
 
    // VSCODE Caps Lock removal
    {
        "key": "capslock",
        "command": "vim.remap",
        "when": "editorTextFocus && vim.mode == 'Insert'"
    },
    {
        "key": "capslock",
        "command": "vim.remap",
        "when": "editorTextFocus && vim.mode == 'Visual'"
    },

 
    // Code Runner Bind
    {
        "key": "ctrl+alt+q",
        "command": "code-runner.run"
    },
    {
        "key": "ctrl+alt+n",
        "command": "-code-runner.run"
    },

    // NAVIGATION
    {
        // Move Down Terminal
        "key": "ctrl+shift+h",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus"
    },
    {
        // Move UP Terminal
        "key": "ctrl+shift+b",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus"
    },
    // {
    //     // OPEN Panel Terminal
    //     "key": "ctrl+shift+j",
    //     "command": "workbench.action.togglePanel"
    // },
    {
        // NEW Terminmal
        "key": "ctrl+shift+k",
        "command": "workbench.action.terminal.new",
        "when": "terminalFocus"
    },
    {
        // KILL Terminal
        "key": "ctrl+shift+m",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus"
    },
    {
        // SWITCH to Code Editor from Terminal
        "key": "ctrl+shift+n",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        // SWITCH to Terminal from Code Editor
        "key": "ctrl+shift+j",
        "command": "workbench.action.terminal.focus",
        "when": "editorTextFocus"
    },

    // Removing the defualt ctrl shift m tab bind
    {
        "key": "ctrl+shift+m",
        "command": "-workbench.actions.view.problems",
        "when": "workbench.panel.markers.view.active"
    },
    {
        "key": "ctrl+shift+u",
        "command": "workbench.action.newWindow"
    },
    {
        "key": "ctrl+shift+n",
        "command": "-workbench.action.newWindow"
    },

    // For new keyboard I have my mode switching key my caps lock key which I rebinded to F8 so these below are to rebind the F8 to the mode key
    {
        "key": "f8",
        "command": "-editor.action.marker.nextInFiles",
        "when": "editorFocus"
    },
    {
        "key": "f8",
        "command": "-PowerShell.RunSelection",
        "when": "editorTextFocus && editorLangId == 'powershell'"
    },
    {
        "key": "f8",
        "command": "extension.vim_escape",
        "when": "editorTextFocus && vim.active && !inDebugRepl"
    },
    {
        "key": "escape",
        "command": "-extension.vim_escape",
        "when": "editorTextFocus && vim.active && !inDebugRepl"
    }

    //  Next bind...
]